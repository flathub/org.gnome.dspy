{
    "id": "org.gnome.dspy",
    "runtime": "org.gnome.Platform",
    "runtime-version": "49",
    "sdk": "org.gnome.Sdk",
    "command": "d-spy",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=session-bus",
        "--socket=system-bus"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "libdex",
            "buildsystem": "meson",
            "config-opts": [
                "-Ddocs=false",
                "-Dexamples=false",
                "-Dtests=false"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/libdex.git",
                    "tag": "1.0.0"
                }
            ]
        },
        {
            "name": "dspy",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/d-spy/49/d-spy-49.2.tar.xz",
                    "sha256": "b814ff27d828aabcda72f2c62f1b41d62035f743d06fd9a7e3c5c986c4879a69",
                    "x-checker-data": {
                        "type": "gnome",
                        "name": "d-spy"
                    }
                }
            ]
        }
    ]
}
